<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nortonlam.popularmovies" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PopularMoviesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.nortonlam.popularmovies.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DetailActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.nortonlam.popularmovies.DETAIL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ReviewsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.nortonlam.popularmovies.REVIEWS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <provider
            android:name=".db.FavoritesProvider"
            android:authorities="com.nortonlam.popularmovies.db.Favorites" >
        </provider>
        <provider
            android:name=".db.MoviesProvider"
            android:authorities="com.nortonlam.popularmovies.db.Movies" >
        </provider>
    </application>

</manifest>
